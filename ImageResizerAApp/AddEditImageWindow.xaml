<Window x:Class="ImageResizerAApp.AddEditImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Image" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Image Name:" />
            <TextBox Name="txtImageName" />

            <TextBlock Text="Width:" />
            <TextBox Name="txtWidth" />

            <TextBlock Text="Height:" />
            <TextBox Name="txtHeight" />

            <TextBlock Text="Rotation:" />
            <TextBox Name="txtRotation" />

            <TextBlock Text="Path:" />
            <Button Name="btnBrowse" Content="Browse..." Click="Browse_Click" />

            <Button Name="btnSave" Content="Save" Click="Save_Click" />
        </StackPanel>
    </Grid>
</Window>
